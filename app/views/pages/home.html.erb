<% if signed_in? %>
  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <h1 class="micropost"><%= t('.invite_to_compose_new_micropost', :default => 'What\'s up?') %></h1>
        <%= render 'shared/micropost_form' %>
        <%= render 'shared/feed' %>
      </td>
      <td class"sidebar_round">
        <%= render 'shared/user_info' %>
        <%= render 'shared/stats' %>
      </td>
    </tr>
  </table>
<% else %>
  <h1><%= t('.simple_title', :default => 'MadnesS') %></h1>
  <p>
    This is the page for the
    <a href="http://madness.org.ua/">MadnesS</a>
    portal page.
  </p>
  <%= link_to 'Sign up now!', signup_path, :class => "signup_button round" %>
<% end %>
